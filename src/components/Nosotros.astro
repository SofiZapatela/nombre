---
import "aos/dist/aos.css";
---

<section id="nosotros" class="py-20 text-center px-4 mt-0">

  <!-- Título -->
  <h2 data-aos="fade-up" class="text-4xl font-bold text-white mb-12 mt-0">
    Nosotros
  </h2>

  <!-- Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">

    <!-- Item 1 -->
    <div
      data-aos="zoom-in"
      class="py-20 px-10 rounded-3xl flex flex-col items-center
             bg-white/10 backdrop-blur-xl 
             hover:bg-white/15 transition"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        class="w-14 h-14 mb-4 stroke-2 text-white"
        fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="m4.5 12.75 6 6 9-13.5" />
      </svg>
      <p class="font-semibold text-white leading-tight text-center">
        Diseños<br />modernos
      </p>
    </div>

    <!-- Item 2 -->
    <div
      data-aos="zoom-in"
      data-aos-delay="100"
      class="py-20 px-10 rounded-3xl flex flex-col items-center
             bg-white/10 backdrop-blur-xl 
             hover:bg-white/15 transition"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        class="w-14 h-14 mb-4 stroke-2 text-white"
        fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M12 1.5v21m10.5-10.5h-21" />
        <circle cx="12" cy="12" r="9" stroke-width="2" />
      </svg>
      <p class="font-semibold text-white leading-tight text-center">
        Webs fáciles<br />de usar
      </p>
    </div>

    <!-- Item 3 -->
    <div
      data-aos="zoom-in"
      data-aos-delay="200"
      class="py-20 px-10 rounded-3xl flex flex-col items-center
             bg-white/10 backdrop-blur-xl 
             hover:bg-white/15 transition"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        class="w-14 h-14 mb-4 stroke-2 text-white"
        fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87
             .074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456
             a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431
             l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255
             c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43
             l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456
             c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128
             c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94
             h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281
             c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127
             c-.325-.196-.72-.257-1.076-.124l-1.217.456
             a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247
             a1.125 1.125 0 0 1 .26-1.431l1.004-.827
